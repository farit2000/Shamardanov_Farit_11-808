@model SocialNet.ViewModels.PostCreateModel
 
<h2>Создать пост</h2>

<form asp-action="Create" asp-controller="Post" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="PostName">Type post name</label>
            <input type="text" asp-for="PostName" />
            <span asp-validation-for="PostName" />
        </div>
        <div class="form-group">
            <label asp-for="PostText">Type post text</label>
            <input type="text" asp-for="PostText" />
            <span asp-validation-for="PostText" />
        </div>
        <div class="form-group">
            <input type="submit" value="Create comment" class="btn btn-outline-dark" />
        </div>
    </div>
</form>