@model SocialNet.ViewModels.PostEditModel
 
<h2>Создать комментарий</h2>

<form asp-route-id="@ViewBag.PostId" asp-action="Edit" asp-controller="Post" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="PostName">Type post Name</label>
            <input value="@ViewBag.PostName" type="text" asp-for="PostName" />
            <span asp-validation-for="PostName" />
        </div>
        <div class="form-group">
            <label asp-for="PostText">Type post text</label>
            <input value="@ViewBag.PostText" type="text" asp-for="PostText" />
            <span asp-validation-for="PostText" />
        </div>
        <div class="form-group">
            <input type="submit" value="Edit comment" class="btn btn-outline-dark" />
        </div>
    </div>
</form>